<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.lab03.phonedialer.PhoneDialerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:inputType="phone"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="6"
            android:columnCount="3">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn1"
                android:text="1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn2"
                android:text="2"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center" />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn3"
                android:text="3"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_gravity="center" />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn4"
                android:text="4"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn5"
                android:text="5"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn6"
                android:text="6"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn7"
                android:text="7"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn8"
                android:text="8"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn9"
                android:text="9"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_gravity="center" />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnstar"
                android:text="*"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btn0"
                android:text="0"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_gravity="center"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnhashtag"
                android:text="#"
                android:layout_column="2"
                android:layout_row="4"
                android:layout_gravity="center"/>
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnhangup"
                android:background="@mipmap/hangup"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_gravity="center"/>
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btnbackspace"
                android:background="@mipmap/backspace"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="center"/>
            <ImageButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/btncall"
                android:background="@mipmap/call"
                android:layout_column="2"
                android:layout_row="5"
                android:layout_gravity="center"/>
        </GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
